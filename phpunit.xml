<?xml version="1.0" encoding="UTF-8"?>

<phpunit>
    <php>
        <ini name="memory_limit" value="2G"/>
    </php>
    <filter>
        <whitelist>
            <location suffix=".php">./</location>
            <exclude>
                <location>vendor/</location>
                <location>test/</location>
                <location>src/Exception/</location>
            </exclude>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="rcm">
            <location>test</location>
        </testsuite>
    </testsuites>
</phpunit>
